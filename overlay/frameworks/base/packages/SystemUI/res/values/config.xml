<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Doze: does this device support STATE_DOZE?  -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- Should we vibrate on an icon animation of the shelf. This should only be active if the
     vibrator is capable of subtle vibrations -->
    <bool name="config_vibrateOnIconAnimation">true</bool>

    <!-- Preferred max refresh rate at AOD & Ambient Display, if supported by the display. -->
    <integer name="config_aodMaxRefreshRate">60</integer>
</resources>

<!-- Enable burn in protection -->
<?xml version="1.0" encoding="utf-8"?>
<resources>
	<bool name="config_enableBurnInProtection">true</bool>
	<bool name="config_enableSmartPixels">true</bool>
	<bool name="config_statusBarBurnInProtection">true</bool>
	<bool name="config_disableStatusBarBurnInProtection">true</bool>
</resources>
<!-- Enable burn in protection shift options -->
<?xml version="1.0" encoding="utf-8"?>
<resources>
	<dimen name="horizontal_max_swift">6dp</dimen>
	<dimen name="vertical_max_swift">6dp</dimen>
	<dimen name="udfps_burn_in_offset_x">6dp</dimen>
	<dimen name="udfps_burn_in_offset_y">6dp</dimen>
	<dimen name="burn_in_prevention_offset_x">40dp</dimen>
	<dimen name="burn_in_prevention_offset_y">40dp</dimen>
	<dimen name="burn_in_prevention_offset_y_large_clock">40dp</dimen>
	<dimen name="default_burn_in_prevention_offset">40dp</dimen>
</resources>

<!-- Enable burn in protection shift options interval -->
<?xml version="1.0" encoding="utf-8"?>
<resources>
	<integer name="config_burnInProtectionMaxVerticalOffset">0</integer>
	<integer name="config_burnInProtectionMinHorizontalOffset">0</integer>
	<integer name="config_burnInProtectionMinVerticalOffset">0</integer>
	<integer name="config_shift_interval">20</integer>
	<integer name="config_burnInProtectionMaxHorizontalOffset">0</integer>
	<integer name="config_burnInProtectionMaxRadius">-1</integer>
</resources>
